@model List<Category>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-outline-primary">
                <i class="bi bi-plus-square"></i> Create
            </a>
        </div>
    </div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>DisplayOrder</th>
                <th>Edit</th>
                <th>Delete</th>
    </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.OrderBy(e=>e.DisplayOrder))
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-outline-info mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                        </a>
                    </div>
                </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-outline-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
            </tr>
        }
    </tbody>
</table>
</div>
